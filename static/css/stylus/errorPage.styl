.error-page
    text-align center
    
    body
        background #fff
    
    .header
        text-align left
        padding 0
        background #fff
        margin 0
        overflow hidden
        max-height 64px
        
        .image-link
            display inline-block

        .header-img
            margin 0 0 0 10px
            max-height 65px
    
    .cont-error
        padding 30px 20px

    .efor-layout__footer
        width auto

.img-error
    text-align center
    font-weigth bold
    border-radius 1000px
    size 250px
    margin auto
    display block
    border 1px solid #f1f1f1
    background #fff
    font-style normal
    box-shadow rgba(0,0,0,0.25) 0 2px 6px 0 inset
    margin-bottom 20px
    
    > .text-number
        font-size 72px
        padding-top 40%
        display block
        text-align center
    
    .titulo
        line-height 1.2em
        font-size 16px
        margin-top 35px
