input-placeholder()
	&.placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}
	&::-webkit-input-placeholder
		{block}
/*input
	+input-placeholder()
		font-weigth normal*/
	
beforeAfter($display=block,$position=absolute,$width=100%,$height=100%)
	content ''
	display $display
	width $width
	height $height
	position $position
/*
span
	beforeAfter block absolute 10px 11px
*/

text-fill-color($ref=transparent)
	vendor text-fill-color, $ref
/*
body	
	text-fill-color(text)
*/

defaultDisplay($display=block)
	display $display
	list-style none
	margin auto
	padding 0
/*
a
	defaultDisplay(inline-block)
*/
ulUnformat($display=block)
	&,ul,li
		defaultDisplay($display)
/*ul
	ulUnformat(inline-block)
*/

scrollbar($color=gray, $invert=false, $size=6px, $radius=true)
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	
	$scroll_track = $invert is true ? $color : lightness($color, 80%)
	$scroll_thumb = $invert is true ? lightness($color, 80%) : $color
	
	//scroll
	&::-webkit-scrollbar
		size $size
	&::-webkit-scrollbar-track
		border-radius $radius is true ? 2px : 0px
		background-color $scroll_track
	&::-webkit-scrollbar-thumb
		border-radius $radius is true ? 10px : 0px
		background $scroll_thumb
/*html
	scrollbar()
*/

user-select(args)
	-webkit-touch-callout (args)
	vendor user-select args
