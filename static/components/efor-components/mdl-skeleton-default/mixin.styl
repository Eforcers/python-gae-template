support-for-ie = true
$soportAr= -webkit- -ms- -moz- -o-

vendor(prop, args)
	for $sop in $soportAr
		{$sop}{prop} args
	{prop} args
/*
div
	vendor animation, foo 250ms ease-in-out*/

display(mode, args...)
	if mode == 'inline-block'
		display inline-block args
		if support-for-ie
			zoom 1
			*display inline args
	if mode == flex
		display -webkit-box args
		display -webkit-flex args
		display -ms-flexbox args
		display flex args
	else
		display mode args
/*
