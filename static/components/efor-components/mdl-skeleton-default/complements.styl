//load widget
*[loading-widget]
    position fixed
    left 0
    right 0
    top 0
    width 100%
    height 0
    box-sizing border-box
    z-index 1000
    text-align center
    transition ease-in-out 1s opacity

    &[style*="display: none"]
        display block !important
        color red


    &[style="display: block;"]
        z-index 9999
        color blue

        .tag-loading
            display block
            opacity 1
            top 0px

        &.pass
            .tag-loading
                opacity 0
                display none

    .tag-loading
        top -50px
        opacity 0
        display block
        transition ease-in-out 1.25s all

    .tag-loading
    .tag-block-screen
        margin 10px auto
        position absolute
        background #FFF0B5
        color #333
        text-align center
        max-width 200px
        left 0
        right 0
        border-radius 4px
        padding 2px 6px

    .tag-block-screen
        display none

    &:before
        content ''
        height 100%
        display none
        background rgba(#fff, .75)
        position fixed
        top 0
        left 0
        right 0
        bottom 0
        width 100%
        height 100%
        z-index 0
        transition ease-in-out 1s all

    &.block
        display none

    &.block
    &.block-remove
        &:before
            display block

        .tag-block-screen
            transition ease-in-out 1s opacity
            display block

    &.block-remove
        &:before
        .tag-block-screen
            opacity 0

