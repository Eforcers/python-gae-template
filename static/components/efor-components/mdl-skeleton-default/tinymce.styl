$blue-grey = $blue-grey is defined ? $blue-grey : #607d8b
$rad = $rad is defined ? $rad : 0px
$screen-sm = $screen-sm is defined ? $screen-sm : 480px
$text_ps = $text_ps is defined ? $text_ps : 12px
$tiny_font_color = $tiny_font_color is defined ? $tiny_font_color : rgba(255,255,255,0.75)

body.tinyMCE_iframe_body
    padding 2px 5px
    max-height calc(100% - 20px)
    background #fff
    font-size 14px
    font-family sans

.mdl-textfield
    > .mce-tinymce
        margin-top -20px
        //margin-bottom -20px

.mce-tinymce.mce-container.mce-panel
    background rgba(0,0,0,0.1)
    border-radius $rad
    border rgba(255,255,255,0.5)
    
    .mce-path-item
    .mce-divider
    i.mce-i-resize
        color $tiny_font_color
    
        .mce-divider
            opacity 0.5
    
    .mce-menubar.mce-toolbar 
    .mce-toolbar-grp
        .mce-container-body
            @media(max-width $screen-sm)
                overflow auto
                display flex
                padding-bottom 10px
                scrollbar($blue-grey, true, 4px)

    .mce-container-body
        .mce-container.mce-panel
        .mce-menubar
        .mce-toolbar-grp
        .mce-btn
            background transparent
            
            .mce-btn
            .mce-menubtn button
                box-sizing border-box
                background transparent
        
                .mce-ico
                &, span
                    color $tiny_font_color
        
                .mce-caret
                    border-top-color $tiny_font_color
        
                .mce-preview
                    background $tiny_font_color
                    
            .mce-btn
            .mce-menubtn
                &:hover
                &:focus
                    background rgba(255,255,255,0.1) !important
                    border-color transparent
        
                &.mce-active
                    background rgba(255,255,255,0.15) !important
        
            .mce-btn-group
                border 1px solid rgba(217, 217, 217, 0.15)
                padding-left 0px
                background rgba(217, 217, 217, 0.1)
                border-radius $rad
        
body > .mce-container.mce-panel.mce-floatpanel.mce-popover
    width auto !important
    height auto !important

body > .mce-container.mce-panel
    height auto !important
    
    table.mce-colorbutton-grid
        td > div
            size 12px
            
        td.mce-grid-cell.mce-colorbtn-trans
            position absolute
            top -1px
            left 100%
        
            > div
                background #fff !important
                height 20px
                width 20px
            
        td.mce-custom-color-btn[colspan="8"]
            > div.mce-btn
                height auto
        
            button 
                display block
                border 1px solid lightgrey
                background rgba(0,0,0,0.05)
                width 100%
                line-height 1.4em
                border-radius 2px

.mce-tinymce-inline .mce-container-body
// table tooltips
.mce-tinymce.mce-tinymce-inline.mce-container.mce-panel.mce-floatpanel
    background #fff
    box-shadow rgba(0,0,0,0.1) 0 2px 4px 0
    
//for modal url image charge and code
@media(max-width $screen-sm)
    .mce-tinymce.mce-tinymce-inline.mce-container.mce-panel.mce-floatpanel.mce-tinymce-inline-inside
        padding-bottom 10px
        box-shadow rgba(0,0,0,0.25) 0 4px 4px 0
    
        
    .mce-container.mce-panel.mce-floatpanel.mce-window
    .mce-tinymce.mce-tinymce-inline.mce-container.mce-panel.mce-floatpanel.mce-tinymce-inline-inside
        left 0 !important
        right 0 !important
        margin auto !important
        width auto !important
        position absolute
        background #fff
        overflow auto
        max-width 90%
        max-height 95%

        .mce-dragh
            display none
        
        .mce-reset
            .mce-container-body.mce-abs-layout
                max-width 100%
                overflow auto
                overflow-y hidden
                scrollbar(grey, false, 4px)
            
                textarea.mce-textbox.mce-multiline.mce-first.mce-last.mce-abs-layout-item
                    font-size $text_ps
                
            .mce-container.mce-panel.mce-foot
                max-width 100%
        
                .mce-container-body.mce-abs-layout
                    max-width 100%
        
                    .mce-widget.mce-btn
                        position static
                        float left
                        margin 10px
                        
                        & + .mce-btn
                            margin-left 0
