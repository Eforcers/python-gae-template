// Contain css for scripts and browser plugins mods

// mods for angular inspector, set minimal design size for div plugin
.ngi-inspector
    width 390px !important
    
    div *
        font-size 11px !important
        
    .ngi-model > label
        line-height 1.75em !important
        background-size auto 12px !important
    
    .ngi-caret
        margin-top -3px !important
        
    .ngi-collapsed .ngi-caret
        background-position-y 0px !important
        