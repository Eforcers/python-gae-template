            max-width 400px
            margin auto
            padding 0
            
        &.width-lg
            max-width 600px !important
            margin auto
            padding 0

    //mod colors
    .mdl-textfield
        .is-invalid.is-upgraded
            // pristine indique if is initial value not mod
                        
        input.mdl-textfield__input
