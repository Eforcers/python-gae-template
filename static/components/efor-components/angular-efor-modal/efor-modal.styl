    overflow hidden
    overflow-y auto
    left 0
    top 100%
    right 0
    bottom 0
    z-index -1
    color #fff
    background $modal_bg
    transition $modal_open_transition
    opacity 0
    height 0

    > *
        transition ease-out 1s all
        opacity 0
        
    .mdl-radio
        font-size $text_p

    .toast
        position absolute
        left 0
        right 0
        font-size $text_ps

        & + .efor-modal-wrapper
            margin-top 35px

    .width-md > div
        display block
        width 100%

    .efor-modal-wrapper
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        margin auto
        max-height 500px

        // This class is created for center delete dialoges/modals and another without whitebox
