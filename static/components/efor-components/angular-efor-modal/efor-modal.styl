    .signature-preview
        padding 0

    option
        color $blue-grey-500
    hr
        border-color #fff
        background-color #fff
        color #fff
        width 100%
        height 0
        display block
        clear both
        opacity 0.25
        margin $paddingBox auto

    h1
        text-align center
        margin-bottom 0
        font-size $text_h3

    .efor-desc
        opacity .75
        text-align center
        display block
        width 100%
        font-size $text_p
        margin auto
        margin-bottom $paddingBox
        line-height 1.2em

    textarea
        font-size $text_ps

